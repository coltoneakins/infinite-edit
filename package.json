{
  "name": "infinite-edit",
  "displayName": "Infinite Edit",
  "description": "Turn your codebase into an infinite, navigable canvas for fluid, spatial thinking and seamless editing.",
  "repository": {
    "type": "git",
    "url": "https://github.com/coltoneakins/infinite-edit.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "infinite-edit-sidebar",
          "title": "Infinite Edit",
          "icon": "assets/icon.png"
        }
      ]
    },
    "views": {
      "infinite-edit-sidebar": [
        {
          "type": "webview",
          "id": "infinite-edit.sidebarView",
          "name": "Infinite Edit",
          "icon": "assets/icon.png"
      }
      ]
    },
    "commands": [
      {
        "command": "infinite-edit.openCanvas",
        "title": "Infinite Edit: Open Canvas"
      },
      {
        "command": "infinite-edit.openFile",
        "title": "Infinite Edit: Open File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "NODE_ENV=development webpack --watch",
    "serve-webview": "NODE_ENV=development webpack serve",
    "dev": "concurrently \"npm run watch\" \"npm run serve-webview\"",
    "package": "NODE_ENV=production webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@hediet/node-reload": "^0.10.0",
    "@hediet/std": "^0.6.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "less": "^4.5.1",
    "less-loader": "^12.3.0",
    "mini-css-extract-plugin": "^2.9.4",
    "sass": "^1.97.1",
    "sass-loader": "^16.0.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "css-loader": "^7.1.2",
    "monaco-editor": "^0.55.1",
    "monaco-editor-webpack-plugin": "^7.1.1",
    "pixi.js": "^8.14.3",
    "style-loader": "^4.0.0"
  }
}
